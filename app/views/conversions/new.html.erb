<%= form_tag("/conversions/show", method: "post") do %>
  <%= label_tag(:date, "Select date*: ") %>
  <%= select_tag(:year, options_for_select(@years, @year)) %>
  <%= select_tag(:month, options_for_select(@months, @month)) %>
  <%= select_tag(:day, options_for_select(@days, @day)) %>
  <%= label_tag(:base, "Base:") %>
  <%= select_tag(:base, options_for_select(@currencies)) %>
  <%= label_tag(:counter, "Counter:") %>
  <%= select_tag(:counter, options_for_select(@currencies)) %>
  <%= label_tag(:amount, "Amount:") %>
  <%= number_field_tag(:amount, step: 0.01) %>
  <%= submit_tag("Convert") %>
<% end %>

<p>*Earliest date for which records are available is <%=@start_date%></p>
